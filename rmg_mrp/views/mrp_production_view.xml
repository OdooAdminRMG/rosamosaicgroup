<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Fields Image and Work Instruction In Manufacutre Form View-->
    <record id="mrp_production_view_inherit_rmg_mrp" model="ir.ui.view">
        <field name="name">mrp.production.view.rmg.mrp</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form//sheet//page[@name='miscellaneous']" position="after">
                <page string='Images and Work Instructions' name="image_work_instruction">
                    <field name="image_attachment_id" widget="one2many"
                           domain="[('mimetype', 'in', ['image/png', 'image/jpeg', 'application/pdf'])]"
                           context="{'default_res_model': active_model, 'default_res_id': active_id}">
                        <tree create="1" editable="bottom">
                            <field name="res_model" force_save="1" invisible="1"/>
                            <field name="res_id" force_save="1" invisible="1"/>
                            <field name="type" invisible="1"/>
                            <field name="name"/>
                            <field name="datas" filename="name" widget="binary"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_production_calendar_inherit_rmg_mrp" model="ir.ui.view">
        <field name="name">mrp.production.calendar.view</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_production_calendar"/>
        <field name="arch" type="xml">
            <xpath expr="//calendar" position="attributes">
                <attribute name="date_stop"/>
            </xpath>
        </field>
    </record>
</odoo>