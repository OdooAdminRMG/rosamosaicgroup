<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quant_location_tree_view" model="ir.ui.view">
        <field name="name">quant.location.tree</field>
        <field name="model">quant.location</field>
        <field name="arch" type="xml">
            <tree string="Lots/Serial Numbers" multi_edit="1">
                <field name="location_id" readonly="1"/>
                <field name="name" decoration-bf="1"/>
                <field name="ref" optional="show"/>
                <field name="product_id" readonly="1"/>
                <field name="product_qty" readonly="1"/>
            </tree>
        </field>
    </record>
    <record id="quant_location_form_view" model="ir.ui.view">
        <field name="name">quant.location.form</field>
        <field name="model">quant.location</field>
        <field name="arch" type="xml">
            <form string="Lots/Serial Numbers" multi_edit="1">
                <group>
                    <group>
                        <field name="lot_id" options="{'no_create': True}"/>
                        <field name="quant_id" readonly="0"/>
                        <field name="location_id" readonly="1"/>
                        <field name="inventory_quantity_auto_apply" readonly="1"/>
                    </group>
                    <group>
                        <field name="ref" optional="show"/>
                        <field name="product_id" readonly="1"/>
                        <field name="product_qty" readonly="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
