<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="selection_sheet_configuration" model="ir.ui.view">
        <field name="name">selection.sheet.configuration</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='process_transfers']" position="before">
                <div class="col-12 col-lg-6 o_setting_box" id="adjust_inventory_valuation">
                    <div class="o_setting_left_pane">
                        <field name="module_rmg_adjust_stock_valuation"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_rmg_adjust_stock_valuation"/>

                        <div class="text-muted">
                            Allow to change Inventory Valuation
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
