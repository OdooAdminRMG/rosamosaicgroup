<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project_form_view_inherit" model="ir.ui.view">
            <field name="name">project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" attrs="{'readonly': [('job_name', '!=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="job_name" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[last()]" position="after">
                    <page name="attachments" string="Attachments">
                        <field name="attachment_ids" widget="one2many"
                        context="{'default_res_model':'ir.attachment','default_res_id':id,'default_res_name':name}">
                            <tree create="1" editable="bottom">
                                <field name="res_model" invisible="1"/>
                                <field name="res_id" invisible="1"/>
                                <field name="res_name" invisible="1"/>
                                <field name="datas" filename="name" widget="binary"/>
                                <field name="name"/>
                                <field name="type" invisible="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="type_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="project_task_form_view_inherit" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="job_name" invisible="1" readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
