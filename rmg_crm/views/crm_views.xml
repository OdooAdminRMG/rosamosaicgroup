<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_lead_form_view" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_lead_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[last()]" position="after">
                    <page name="attachments" string="Attachments">
                        <field name="readonly_attachments" invisible="1"/>
                        <field name="attachment_ids" widget="one2many" attrs="{'readonly': [('readonly_attachments', '=', True)]}"
                               context="{'default_res_model':'crm.lead','default_res_id':id,'default_res_name':name}">
                            <tree create="1" editable="bottom">
                                <field name="datas" filename="name" widget="binary"/>
                                <field name="res_model" invisible="1"/>
                                <field name="res_id" invisible="1"/>
                                <field name="res_name" invisible="1"/>
                                <field name="name" invisible="1"/>
                                <field name="file_size"/>
                                <field name="type" invisible="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="type_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
