<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mrp_production_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="job_name" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_production_calendar" model="ir.ui.view">
            <field name="name">mrp.production.calendar</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_production_calendar"/>
            <field name="arch" type="xml">
                <field name="product_id" position="after">
                    <field name="job_name" invisible="True"/>
                </field>
            </field>
        </record>

        <record id="mrp_production_kanban_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.kanban.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_kanban_view"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="job_name"/>
                </field>

                <xpath expr="//div[hasclass('o_kanban_record_bottom')]" position="before">
                    <div class="text-muted">
                        <span><t t-esc="record.job_name.value"/></span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
