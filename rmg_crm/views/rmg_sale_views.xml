<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='other_information']/group/group[@name='sale_reporting']"
                       position="after">
                    <group string="Costing" name="budgeted_cost">
                        <group colspan="2" class="mt-0">
                            <field name="budgeted_labor_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="budgeted_material_cost" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="job_name" attrs="{'readonly': [('opportunity_id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//notebook/page[last()]" position="after">
                    <page name="attachments" string="Attachments" invisible="1">
                        <field name="readonly_attachments" invisible="1"/>
                        <field name="attachment_ids" widget="one2many"
                               attrs="{'readonly': ['|',('readonly_attachments', '=', True),('state','in','sale')]}">
                            <tree create="1" editable="bottom">
                                <field name="datas" filename="name"/>
                                <field name="name"/>
                                <field name="type" invisible="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="type_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
