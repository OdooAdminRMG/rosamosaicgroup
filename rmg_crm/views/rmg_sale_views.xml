<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form_view_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='other_information']/group/group[@name='sale_reporting']"
                       position="after">
                    <group string="Costing" name="budgeted_cost">
                        <group colspan="2" class="mt-0">
                            <field name="budgeted_labor_cost"/>
                            <field name="budgeted_material_cost"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="job_name" attrs="{'readonly': [('opportunity_id', '!=', False)]}"/>
                </xpath>
                <xpath expr="//notebook/page[last()]" position="after">
                    <page name="attachments" string="Attachments" invisible="1">
                        <field name="readonly_attachments" invisible="1"/>
                        <field name="attachment_ids" widget="one2many"
                               attrs="{'readonly': ['|',('readonly_attachments', '=', True),('state','in','sale')]}">
                            <tree create="1" editable="bottom">
                                <field name="datas" filename="name"/>
                                <field name="name"/>
                                <field name="type" invisible="1"/>
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="type_id"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="action_create_job_costing_record" model="ir.actions.server">
            <field name="name">Set as Supplier</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="binding_model_id" ref="rmg_crm.model_job_costing"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = env['job.costing'].create_job_costing_record()
            </field>
        </record>
        <menuitem id="job_costing_menu"
                  name="Job Costing"
                  parent="sale.sale_menu_root"
                  sequence="20"/>
        <menuitem id="report_job_costing"
                  name="Job Costing Tree"
                  parent="job_costing_menu"
                  action="rmg_crm.action_create_job_costing_record"
                  sequence="1"/>
    </data>
</odoo>
