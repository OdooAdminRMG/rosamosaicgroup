<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="ckus_check_inherit" inherit_id="l10n_us_check_printing.ckus_check">
            <xpath expr="//div[hasclass('ckus_check')]" position="replace">
                <div class="ckus_check">
                    <t t-if="page['state'] == 'cancelled'">
                        <div class="o-watermark">VOID</div>
                    </t>
                    <div class="sequence_number" t-if="page['sequence_number']" t-esc="page['sequence_number']"/>
                    <div class="display_date" t-esc="page['date']"/>
                    <div class="row">
                        <div class="col-6 ckus_payee_name" t-esc="page['partner_name']"/>
                        <div class="col-6 ckus_payee_amount">
                            <t t-esc="page['amount']"/>
                        </div>
                    </div>
                    <div class="ckus_amount_in_word" t-esc="page['amount_in_word']"/>
                    <div class="ckus_payee_addr" t-esc="page['partner_id']"
                         t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                    <div class="ckus_memo" t-esc="page['memo']"/>
                </div>
            </xpath>
        </template>


        <template id="ckus_stub_inherit" inherit_id="l10n_us_check_printing.ckus_stub">
            <xpath expr="//div[@t-attf-class='ckus_stub ckus_stub_{{ stub_num }}']/div[hasclass('row')]"
                   position="replace">
                <div class="row summary_line">
                    <div class="col-8 text-right">
                        <span t-esc="page['partner_name']"/>
                    </div>
                    <div class="col-2 text-middle">
                        <span t-esc="page['date']"/>
                    </div>
                    <div class="col-2 text-right sequence_number">
                        <span t-if="page['sequence_number']" t-esc="page['sequence_number']"/>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
