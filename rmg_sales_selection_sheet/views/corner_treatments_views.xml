<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="corner_treatments_tree_view" model="ir.ui.view">
        <field name="name">Corner Treatments Tree View</field>
        <field name="model">corner.treatments</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="corner_treatments_form_view" model="ir.ui.view">
        <field name="name">Corner Treatments Form View</field>
        <field name="model">corner.treatments</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_corner_treatments" model="ir.actions.act_window">
        <field name="name">Corner Treatments</field>
        <field name="res_model">corner.treatments</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="corner_treatments_config" action="rmg_sales_selection_sheet.action_corner_treatments"
              parent="rmg_sales_selection_sheet.selection_config_main"
              sequence="2"/>
</odoo>
