<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_sale_order_form_view" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page/group/group/field[@name='invoice_status']" position="after">
                    <field name="selection_sheet_notes"/>
                    <field name="transferred_to_mo" readonly="0"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='sequence']" position="after">
                    <field name="id" invisible="0" attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                    <field name="section_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                    <field name="rmg_sale_id" invisible="1"/>
                    <field name="mrp_order_id" invisible="1"/>
                </xpath>
                 <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="replace_rmg_product" invisible="1"/>
                  <button name="replace_manufacture_product" class="fa fa-reply-all" type="object" attrs="{'invisible': ['|', '|', '|', ('replace_rmg_product', '=', False), ('parent.state', '!=', 'sale'), ('product_uom_qty', '&lt;=', 0), ('qty_delivered', '!=', 0)]}">
                </button>
                </xpath>
            </field>
        </record>

        <record id="view_rmg_sale_tree" model="ir.ui.view">
            <field name="name">RMG Selection Sheet Tree</field>
            <field name="model">rmg.sale</field>
            <field name="arch" type="xml">
                <tree string="Sales">
                    <field name="order_id"/>
                    <field name="order_line_id"/>
                </tree>
            </field>
        </record>

        <record id="view_rmg_sale_form" model="ir.ui.view">
            <field name="name">RMG Selection Sheet Form</field>
            <field name="model">rmg.sale</field>
            <field name="arch" type="xml">
                <form string="Sales">
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field readonly="1" name="order_id"/>
                            </group>
                            <group>
                                <field readonly="1" name="order_line_id"/>
                                <field invisible="1" name="mo_line_id"/>
                            </group>
                            <group>
                                <field name="edge_profiles_id" options="{'no_create': True,}"/>
                                <field name="slab_tagged_id"/>
                                <field name="templated_by_id" options="{'no_create': True,}"/>
                                <field name="corner_treatments_id" options="{'no_create': True,}"/>
                                <field name="square_footage_estimate"/>
                                <field name="installed_square_footage"/>
                            </group>
                            <group>
                                <field name="faucets_id"/>
                                <field name="faucet_model"
                                       attrs="{'invisible': [('faucets_id',  '=', False)],}"/>
                                <field name="sink_by_bella_id" options="{'no_create': True,}"/>
                                <field name="customer_sink_types_id"/>
                                <field name="customer_sink_model_number"
                                       attrs="{'invisible': [('customer_sink_types_id',  '=', False)]}"/>
                                <field name="range_types_id" options="{'no_create': True,}"/>
                                <field name="range_model"
                                       attrs="{'invisible': [('range_types_id',  '=', False)]}"/>
                                <field name="splash"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Order Line" name="order_line">
                                <field name="order_line_ids">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes" name="notes">
                                <group>
                                    <field name="slab_notes"/>
                                    <field name="corner_treatment_notes"/>
                                    <field name="shop_notes"/>
                                    <field name="installation_notes"/>
                                    <field name="additional_holes"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="save_data" class="btn-primary" string="Confirm" type="object" id="confirm_data"
                                data-hotkey="s"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_rmg_sale_form" model="ir.actions.act_window">
            <field name="name">RMG Selection Sheet</field>
            <field name="res_model">rmg.sale</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- <menuitem id="customer_sink_types_config" action="rmg_sales_selection_sheet.action_rmg_sale_form"
                  parent="rmg_sales_selection_sheet.selection_config_main"
                  sequence="1"/> -->
    </data>
</odoo>
