<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="edge_profiles_tree_view" model="ir.ui.view">
        <field name="name">Edge Profiles Tree View</field>
        <field name="model">edge.profiles</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="edge_profiles_form_view" model="ir.ui.view">
        <field name="name">Edge Profiles Form View</field>
        <field name="model">edge.profiles</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_edge_profiles" model="ir.actions.act_window">
        <field name="name">Edge Profiles</field>
        <field name="res_model">edge.profiles</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="selection_config_main" name="Selection Sheet" parent="sale.menu_sale_config" sequence="6"/>

    <menuitem id="edge_profiles_config" action="rmg_sales_selection_sheet.action_edge_profiles"
              parent="rmg_sales_selection_sheet.selection_config_main"
              sequence="2"/>
</odoo>
