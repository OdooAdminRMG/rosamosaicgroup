<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner FORM -->
    <record model="ir.ui.view" id="view_view_task_form2">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="task_id"/>
                <field name="lead_time" widget="float_time"/>
                <field name="offset_hours" widget="float_time"/>
            </xpath>
            <xpath expr="//field[@name='depend_on_ids']" position="attributes">
                    <attribute name="domain">[('project_id', '=', project_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='depend_on_ids']//field[@name='date_deadline']" position="after">
                <field name="offset_hours" widget="float_time"/>
            </xpath>
        </field>
    </record>

    <!--  Project Tree -->
     <record model="ir.ui.view" id="view_view_task_tree2">
        <field name="name">project.task.inherited.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="attributes">
                <attribute name="invisible">False</attribute>
                <attribute name="widget">handle</attribute>
            </xpath>
    <record model="ir.ui.view" id="view_task_form2_inherited_rmg_sale_projects">
        <field name="name">project.task.form_inherited_rmg_sale_projects</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="peg_to_manufacturing_order"/>
                <field name="peg_to_delivery_order"/>
            </field>
            <div name="button_box" position="inside">
                <button name="action_open_associated_mos"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-wrench"
                        attrs="{'invisible': [('peg_to_manufacturing_order', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"
                              attrs="{'invisible': [('mrp_production_count', '=', 0)]}">
                            <field name="mrp_production_count"/>
                        </span>
                        <span class="o_stat_text">Manufacturing</span>
                    </div>
                </button>
                <button name="action_open_associated_pickings"
                        class="oe_stat_button"
                        type="object"
                        icon="fa-truck"
                        attrs="{'invisible': [('peg_to_delivery_order', '=', False)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"
                              attrs="{'invisible': [('mrp_production_count', '=', 0)]}">
                            <field name="picking_count"/>
                        </span>
                        <span class="o_stat_text">Delivery</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <!--Add Button from TreeView -->
    <record model="ir.ui.view" id="view_task_tree2_inherited_rmg_sale_projects">
        <field name="name">project.task.tree2.inherited_rmg_sale_projects</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <header>
                    <button name="action_open_mos_to_associate_with_task"
                            type="object"
                            string="Associate MO"/>
                    <button name="action_open_dos_to_associate_with_task"
                            type="object"
                            string="Associate Delivery Order"/>
                </header>
            </tree>
        </field>
    </record>
</odoo>
