<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Partner FORM -->
    <record model="ir.ui.view" id="view_view_task_form2">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="task_id"/>
                <field name="lead_time" widget="float_time"/>
                <field name="offset_hours" widget="float_time"/>
            </xpath>
            <xpath expr="//field[@name='depend_on_ids']" position="attributes">
                    <attribute name="domain">[('project_id', '=', project_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='depend_on_ids']//field[@name='date_deadline']" position="after">
                <field name="offset_hours" widget="float_time"/>
            </xpath>
        </field>
    </record>

    <!--  Project Tree -->
     <record model="ir.ui.view" id="view_view_task_tree2">
        <field name="name">project.task.inherited.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="attributes">
                <attribute name="invisible">False</attribute>
                <attribute name="widget">handle</attribute>
            </xpath>
        </field>
    </record>
</odoo>
