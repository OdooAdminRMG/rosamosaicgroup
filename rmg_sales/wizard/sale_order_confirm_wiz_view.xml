<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_sale_order_confirm_wiz_form" model="ir.ui.view">
            <field name="name">sale.order.confirm.wiz.form</field>
            <field name="model">sale.order.confirm.wiz</field>
            <field name="arch" type="xml">
            <form string="Create Menu">
                    <group>
                        <field name="sale_id" invisible="1"/>
                        <field name="message" readonly="True" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="confirm_so" string="Confirm SO" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
