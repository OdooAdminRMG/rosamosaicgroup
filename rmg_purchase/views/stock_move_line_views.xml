<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_move_line_detailed_operation_tree_inherit" model="ir.ui.view">
            <field name="name">stock.move.line.product.domain.tree</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="context">{'default_detailed_type': 'product',
                        'stock_picking_id':parent.id,
                        'stock_picking_type': parent.picking_type_id}
                    </attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
